{{!< default}}
{{#post}}
<article class="has-text-white column">
    <h1 class="has-text-centered has-text-white title">{{title}}</h1>
    <h2 class="has-text-centered has-text-white subtitle">Published on {{date published_at format="MMMM DD YYYY"}}
        {{#foreach authors}}
        {{#if @first}}
        </br>
        {{else}}
        <small> </small>
        {{/if}}
        <a href="{{url}}">{{name}}</a>
        {{/foreach}}
    </h2>
    <div class="has-text-centered">
        <strong class="has-text-white">Tags: </strong>
        {{#if tags}}
        {{#foreach tags}}
        {{#has index="0"}}
        <a href="{{url}}"><span class="tag is-medium is-light is-primary">{{name}}</span></a>
        {{else}}
        <a href="{{url}}"><span class="tag is-medium is-light">{{name}}</span></a>
        {{/has}}
        {{/foreach}}
        {{/if}}
    </div>
    <p>
        {{content}}
    </p>
</article>
<nav class="pagination is-rounded is-centered" role="navigation" aria-label="pagination">
    {{#prev_post}}
    <a class="pagination-previous" href="{{url}}">{{title}}</a>
    {{/prev_post}}
    {{#next_post}}
    <a class="pagination-next" href="{{url}}">{{title}}</a>
    {{/next_post}}
</nav>
{{/post}}